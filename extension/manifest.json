{
  "manifest_version": 3,
  "name": "Google Chat - エクスプローラーで開く",
  "version": "1.0.0",
  "description": "Google Chatで選択したパスを右クリックからエクスプローラーで開きます",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "commands": {
    "open-in-explorer": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      },
      "description": "選択したパスをエクスプローラーで開く"
    }
  },
  "permissions": [
    "contextMenus",
    "nativeMessaging",
    "activeTab",
    "tabs",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://chat.google.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
